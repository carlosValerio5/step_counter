{
  "expo": {
    "name": "step_tracker",
    "slug": "step_tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/step_counter_logo.png",
    "scheme": "steptracker",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "com.valerio.stepstracker",
      "supportsTablet": true,
      "infoPlist": {
        "NSMotionUsageDescription": "This app needs access to motion sensors to track your daily steps and help you achieve your fitness goals.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.valerio.stepstracker",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.ACTIVITY_RECOGNITION"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/step_counter_logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-sensors",
        {
          "motionPermission": "Allow $(PRODUCT_NAME) to access your motion sensors."
        }
      ],
      [
        "expo-sqlite",
        {
          "enableFTS": true,
          "useSQLCipher": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "732c7d1b-f593-4fd0-9c38-1024ddb1483a"
      }
    }
  }
}
